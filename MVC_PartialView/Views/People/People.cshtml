@using MVC_PartialView.ViewModel;
@model IEnumerable<PersonViewModel>

@{ Layout = null; }

<div class="row personRow">
    <div class="col-md-2">
        <h3>ID</h3>
    </div>

    <div class="col-md-2">
        <h3>Action</h3>
    </div>

    <div class="col-md-3">
        <h3>Name</h3>
    </div>

    <div class="col-md-2">
        <h3>Phone number</h3>
    </div>

    <div class="col-md-3">
        <h3>City</h3>
    </div>
</div>

@{
    foreach (PersonViewModel person in Model) {
        <partial name="/Views/People/Partial/Person.cshtml" model="person"/>
    }
}


<style>
    .personRow{
        clear: both;
        text-align: center;
        height: 50px;
        line-height: 50px;
    }
</style>